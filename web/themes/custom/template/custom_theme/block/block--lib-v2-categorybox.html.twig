{{ attach_library('lib_v2_core/libraries') }}
{{ attach_library('lib_category_box_v2/libraries') }}
<div class="lib-comp-catbox">
    <div class="lib-comp-catbox__tabs">
        {# Tabs #}
        {% for key, item in content.field_lib_v2_categorybox_group_r if key|first != '#' %}
        {% if key == 0 %}
        <div class="lib-comp-catbox__tab lib-comp-catbox__tab-{{key + 1}} is-active">
        {% else %}
        <div class="lib-comp-catbox__tab lib-comp-catbox__tab-{{key + 1}}">
        {% endif %}
            <div class="lib-comp-catbox__tab-icon">{{(item.field_lib_v2_categtabs_icons)}}</div>
            <div class="lib-comp-catbox__tab-text">{{item.field_lib_v2_categtabs_title}}</div>
        </div>
        {% endfor %}
        {# End Tabs #}
    </div>
    <div class="lib-comp-catbox__content">
        {# Tab Content #}
        <div class="lib-comp-catbox__tab-content">
            {# Grid icons #}
            {% for key, item in content.field_lib_v2_categorybox_group_r if key|first != '#' %}
                {% for key, item2 in item.field_lib_v2_categtabs_group_ref if key|first != '#' %}
                {% if key == 0 %}
                <div class="lib-comp-catbox__grid {{item.field_lib_v2_categtabs_colum.0['#markup']}} is-active">
                {% else %}
                <div class="lib-comp-catbox__grid {{item.field_lib_v2_categtabs_colum.0['#markup']}}">
                {% endif %}
                    <div class="lib-comp-catbox__item lib-comp-catbox__item-{{key + 1}} lib-comp-card-icon">
                        <div class="lib-comp-card-icon__icon">{{(item2.field_lib_v2_categcard_icon)}}</div>
                        <div class="lib-comp-card-icon__icon">{{(item2.field_lib_v2_categcard_desc)}}</div>
                    </div>
                </div>
                {% endfor %}
            {% endfor %}
            {# End Grid Icons #}
        </div>
        {# End Tab Content #}
    </div>
</div>
