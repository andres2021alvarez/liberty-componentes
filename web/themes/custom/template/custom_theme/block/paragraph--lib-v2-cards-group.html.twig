{{ attach_library('lib_v2_core/libraries') }}
{{ attach_library('lib_cards_v2/libraries') }}
<div class="lib-comp-cardlist">
	<div class="lib-comp-cardlist__container {{card_group.columns}}">
		{% for key, item in card_group.items  %}
			{# Card Item #}
			<div class="lib-comp-card">
				<div class="lib-comp-card__image">
					<img src="{{item.imagen}}" width="480" height="300" alt="Easy" loading="lazy" typeof="foaf:Image" class="image-style-large">
				</div>
				<div class="lib-comp-card__content">
					<h2 class="lib-comp-card__title">{{item.title}}</h2>
					<div class="lib-comp-card__body">
						{{item.desc}}
					</div>
					<a href="{{item.link.uri}}" class="lib-comp-button lib-comp-card__button">{{item.link.text}}</a>
				</div>
			</div>
			{# End Card Item #}
		{% endfor %}
	</div>
</div>
